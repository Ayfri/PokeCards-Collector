---
interface Props {
	cards_href: string;
	username: string;
	cart_icon: string;
	logo_href: string;
}

const {username} = Astro.props;
---
<header>
	<a href="/" class="cards-link">Cards</a>
	<a href="/" class="logo-link">
		<img alt="logo" class="logo" src="public/pokestore.png"/>
	</a>
	<a href="/cart">
		<img alt="cart" src=""/>
	</a>
	<a href="/account">{username}</a>
</header>
<style>
	:root {
		--header-color: #232323;
	}

	header {
		align-items: center;
		background-color: var(--header-color);
		border-radius: 30px;
		display: flex;
		gap: 2rem;
		justify-content: space-between;
		margin: var(--header-padding);
		padding: 1rem 2rem;
		position: relative;
	}

	header a {
		text-decoration: none;
		color: #aeaeae;
	}

	.logo {
		object-fit: contain;
		aspect-ratio: 1/1;
	}

	.logo-link, .logo {
		width: 4rem;
		height: 4rem;
	}

	.logo-link {
		position: absolute;
		top: 100%;
		left: 50%;
		padding: .6rem;
		border-radius: 50%;
		translate: -50% -50%;
		background-image: linear-gradient(transparent 50%, var(--header-color) 50%);
	}

	.cards-link {
		flex: 1;
	}
</style>
