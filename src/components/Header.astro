---
import {App} from '../env';
type Locals = App.Locals;
interface Props {
	cards_href: string;
	username: string;
	cart_icon: string;
	logo_href: string;
}

const locals = Astro.locals as Locals;
const loggedIn = locals.user !== undefined;
const username = locals.user?.username ?? '';
---
<header>
	<a href="/" class="cards-link">Cards</a>
	<a href="/" class="logo-link">
		<img alt="logo" class="logo" src="/public/pokestore.png"/>
	</a>
	<a href="/cart">
		<svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512" class="cart">
			<path
				d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"
			/>
		</svg>
	</a>
	{
		loggedIn
		?
		<a href="/account">{username}</a>
		<a href="./auth/logout" id="logout">Logout</a>
		:
		<a href="/login">Login</a>
	}
</header>

<script is:inline defer>
	const logout = document.getElementById('logout');
	logout?.addEventListener('click', async (e) => {
		e.preventDefault();
		const response = await fetch(logout.href, {
			method: 'GET',
		});

		if (response.ok) {
			document.cookie = `session-token=; expires=${new Date(0)}; path=/;`;
			window.location.href = '/';
		}
	});
</script>

<style>
	:root {
		--header-color: #232323;
		--header-text-color: #aeaeae;
	}

	header {
		align-items: center;
		background-color: var(--header-color);
		border-radius: 30px;
		display: flex;
		gap: 2rem;
		justify-content: space-between;
		margin: var(--header-padding);
		padding: 1rem 2rem;
		position: relative;
	}

	header a {
		text-decoration: none;
		color: var(--header-text-color);
		display: flex;
		align-items: center;
	}

	.logo {
		object-fit: contain;
		aspect-ratio: 1/1;
	}

	.logo-link, .logo {
		width: 4rem;
		height: 4rem;
	}

	.logo-link {
		position: absolute;
		top: 100%;
		left: 50%;
		padding: .6rem;
		border-radius: 50%;
		translate: -50% -50%;
		background-image: linear-gradient(transparent 50%, var(--header-color) 50%);
	}

	.cards-link {
		flex: 1;
	}

	.cart {
		fill: var(--header-text-color);
	}
</style>
