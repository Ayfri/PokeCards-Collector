---
import {Card} from '../types';
interface Props {
	cards: Card[];
	name: string;
}

const {
	cards,
	name,
} = Astro.props;
---
<div class="purchase-resume-content-item">
	<div class="item-info">
		<p>{name}</p>
		<p>x{cards.length}</p>
	</div>
	<p>
		{cards.reduce((acc, c) => acc + c.price, 0)} $
	</p>
</div>
