---
import Layout from '../layouts/Layout.astro';

---
<Layout title="Purchase Confirmed">
    <div class="container">
	    <h1>Purchase Confirmed</h1>
	    <p>Thank you for your purchase!</p>
        <a href="/">Home</a>
    </div>
</Layout>
<style>
.container {
    margin: 10rem auto;
    padding: 3rem;
    color: white;
    background-color: #232323;
    width: fit-content;
    border-radius: 1rem;
}

h1 {
    margin-bottom: 1rem;
    text-align: center;
    font-size: 3.5rem;
}

p {
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
}

a {
    font-size: 2rem;
    text-align: center;
    display: block;
    margin: 0 auto;
    width: fit-content;
    padding: 1rem;
    border-radius: 1rem;
    background-color: #ff9e00;
    color: black;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out;
}

a:hover {
    background-color: #ffb444;
}
</style>