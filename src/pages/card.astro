		transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		filter: drop-shadow(0px 0px 8px rgb(243, 208, 44)) drop-shadow(3px 3px 4px #000);
	}

	.set {
		transition: all .5s cubic-bezier(0.22, 1, 0.36, 1);
	}

