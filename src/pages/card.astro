	}

	.filter::before {
		background-image: url("/particles.png");
		background-repeat: no-repeat;
		width: 100%;
		height: 100%;
		z-index: -2;
		position: absolute;
		inset: 0 0 0 0;
		content: "";
		filter: var(--filter);
	}

	.main-container {
		margin: 5rem auto 0 auto;
		display: flex;
		flex-direction: column;
		gap: 2rem;
		width: 90%;
		z-index: -1;
	}

	.top-container {
		height: 33rem;
	}

