import PokemonType from "../components/PokemonType.astro";
import "../styles/colors.css";
import {Image} from "astro:assets";


export interface Card {
    name: string;
    imageUrl: string;
    types: string;
    rarity: string;
    price: number;
    pokemon: Pokemon;
}

export interface Pokemon {
    numero: number;
    name: string;
    description: string;
    imageUrl: string;
    types: string;
}
