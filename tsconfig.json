{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2022",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "NodeNext",
		"skipLibCheck": true,
		"esModuleInterop": false,
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			],
			"$helpers/*": [
				"src/helpers/*"
			],
			"~/*": [
				"src/*"
			]
		}
	}
}
